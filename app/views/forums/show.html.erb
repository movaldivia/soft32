
<p id="notice"><%= notice %></p>

<h3>
  <strong>Topic:</strong>
  <%= @forum.topic %>
</h3>

<%= link_to 'Edit', edit_forum_path(@forum) %> |
<%= link_to 'Back', forums_path %>
<h1> POSTS </h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |msg| %>
      <tr>
        <% if msg.id == @forum.id %>
          <td><%= msg.body %></td>
          <td><%= link_to 'Show', msg %></td>
          <% if user_signed_in? && current_user.administrator? %>
            <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
            <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
